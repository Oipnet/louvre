{% extends 'layout/base.html.twig' %}

{%  block body %}
    <header class="jumbotron">
        <h1 class="display-4">{{ 'welcome'|trans }}</h1>
        <hr>
        <a href="{{ path("store") }}" class="btn btn-primary btn-lg">Reservez votre billet en ligne</a>
    </header>
    <!-- TODO : Get tarif in database -->
    <section class="prices card-group">
        {% for price in prices %}
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h4>{{ price.label }}</h4>
                </div>
            </div>
            <div class="card-footer">
                <small class="text-muted">{{ price.formattedAmount }}</small>
            </div>
        </div>
        {%  endfor %}
    </section>
{%  endblock %}